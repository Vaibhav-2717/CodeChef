#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t,n;
	std::cin >> t;
	while(t--){
	    std::cin >> n;
	      int a[n];
	      for(int i=0;i<n;i++){
	          std::cin >> a[i];
	      }
	      int k=0;
	      
	      for(int i=0;i<n;i++){
	          int v=1+i+k;
	          if(v==a[i]){
	              k++;
	          }
	      }
	      std::cout << k << std::endl;
	}
	return 0;
}
