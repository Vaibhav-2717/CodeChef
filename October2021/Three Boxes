#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t,a,b,c,d;
	std::cin >> t;
	while(t>0){
		    std::cin >> a>>b>>c>>d;
		    
		    if (a+b+c<=d){
		       std::cout << "\n1" << std::endl;
		    } 
		    else if (a+b<=d){
		        std::cout << "\n2" << std::endl;
		    } 
		    else if(a+c<=d){
		        std::cout << "\n2" << std::endl;
		    }
		    else{
		        std::cout << "\n3" << std::endl;
		    }
		    t--;
		}
	return 0;
}
